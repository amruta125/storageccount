
 {
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
       "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Storage account name"
            }
        },
        "containerName": {
            "type": "string",
            "metadata": {
                "description": "Container name"
            }
        },
        "storageAccountType": {
            "type": "string",
            "metadata": {
                "description": "Storage Account Type"
            }
        },
       "serviceName": {
            "type": "string",
             "metadata": {
                "description": "Service Name for API"
            }
        },
       "apiName": {
            "type": "string",
            "metadata": {
                "description": "API Name"
            }
        },
       "apiRevision": {
            "type": "string",
            "metadata": {
                "description": "API revision"
            }
        }, 
       "integration_account_name": {
           "type": "string",
            "metadata": {
                "description": "Integration Account Name"
            }
        },
       "workflows_name": {
           "type": "string",
           "metadata": {
                "description": "Workflows Name"
            }
        },
       "sb_namespaces":{
           "type": "string",
           "metadata": {
                "description": "Namespace Name"
            }
       },
       "customConnectorName": {
           "type": "string",
            "metadata": {
                "description": "Custom Connector Name"
            }
       },
       "ApimServiceName": {
           "type": "string"
       },
       "ApiName": {
           "type": "string"
       },    
       "ServiceUrl": {
           "type": "string"    
       },
       "ApiSuffix": {
         "type": "string"    
       },
       "ApiVersion": {
         "type": "string"    
       },    
       "SwaggerPath": {
         "type": "string"    
       },    
       "OpenIdProvider": {
         "type": "string"    
       },    
       "OpenIdUrl": {
         "type": "string"    
       },    
       "SigningKey": {
         "type": "string"    
       },    
       "Issuer": {
         "type": "string"    
       },
       "Product": {
         "type": "string"    
       },
       "ApplicationInsight": {
         "type": "string"    
       }
    },
    "variables": {},
    "resources": [
     {
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "name": "storage",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/amruta125/storageccount/main/storageaccount.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "containerName":{
                         "value": "[parameters('containerName')]"
                    },
                     "storageAccountType": {
                         "value": "[parameters('storageAccountType')]"
                    }
                }
            }
        },   
        {
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "name": "api",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/amruta125/storageccount/main/apim.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serviceName": {
                         "value": "[parameters('serviceName')]"
                    },
                   "ApimServiceName": {
                     "value": "[parameters('ApimServiceName')]"
                   },
                   "ApiName": {
                     "value": "[parameters('ApiName')]"
                   },    
                   "ServiceUrl": {
                     "value": "[parameters('ServiceUrl')]"
                   },
                   "ApiSuffix": {
                     "value": "[parameters('ApiSuffix')]" 
                   },
                   "ApiVersion": {
                     "value": "[parameters('ApiVersion')]"   
                   },    
                   "SwaggerPath": {
                    "value": "[parameters('SwaggerPath')]" 
                   },    
                   "OpenIdProvider": {
                     "value": "[parameters('OpenIdProvider')]"
                   },    
                   "OpenIdUrl": {
                     "value": "[parameters('OpenIdUrl')]"  
                   },    
                   "SigningKey": {
                     "value": "[parameters('SigningKey')]" 
                   },    
                   "Issuer": {
                     "value": "[parameters('Issuer')]"  
                   },
                   "Product": {
                     "value": "[parameters('Product')]"
                   },
                   "ApplicationInsight": {
                     "value": "[parameters('ApplicationInsight')]"
                   }
                }
            }
        }, 
        {
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "name": "LogicAppIntegrationAccount",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/amruta125/storageccount/main/logicappintegrationacc.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "integration_account_name": {
                         "value": "[parameters('integration_account_name')]"
                    },
                    "workflows_name": {
                         "value": "[parameters('workflows_name')]"
                    },
                    "customConnectorName": {
                         "value": "[parameters('customConnectorName')]"
                    }
                }
           }
        },
        {
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "name": "ServiceBus",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/amruta125/storageccount/main/servicebus.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "sb_namespaces": {
                         "value": "[parameters('sb_namespaces')]"
                    }
                   
                }
            }
        }
      ]
    }
